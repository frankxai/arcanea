{
  "name": "@arcanea/extension-core",
  "version": "0.3.0",
  "description": "Shared foundation for all Arcanea browser extensions and overlays",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "node --test tests/*.test.mjs",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@arcanea/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.5.4"
  },
  "keywords": [
    "arcanea",
    "extension",
    "guardian",
    "ai",
    "browser-extension",
    "chrome-extension"
  ],
  "author": "FrankX <frank@frankx.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frankxai/arcanea.git",
    "directory": "packages/extension-core"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
