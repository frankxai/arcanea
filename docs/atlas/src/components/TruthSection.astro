---
interface TruthSectionProps {
  title: string;
  truths: { id: string; statement: string; era?: string; status?: string }[];
}

const { title, truths } = Astro.props as TruthSectionProps;
---

<section class="truths">
  <h2>{title}</h2>
  <ul>
    {truths.map((truth) => (
      <li id={truth.id}>
        <div class="orb"></div>
        <div class="content">
          <span class="era">{truth.era ?? 'Eternal'}</span>
          <p>{truth.statement}</p>
          {truth.status && <span class={`status status-${truth.status.toLowerCase()}`}>{truth.status}</span>}
        </div>
      </li>
    ))}
  </ul>
</section>

<style>
  .truths {
    margin: 4rem 0;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: rgba(244,247,255,0.92);
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 1rem;
  }

  li {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1.25rem;
    align-items: center;
    background: rgba(14,16,32,0.72);
    border: 1px solid rgba(110,107,255,0.26);
    border-radius: 16px;
    padding: 1.25rem 1.5rem;
  }

  .orb {
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(190,115,255,0.95), rgba(110,107,255,0.2));
    box-shadow: 0 0 24px rgba(190,115,255,0.45);
  }

  .era {
    display: inline-flex;
    font-size: 0.7rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: rgba(190,115,255,0.75);
  }

  p {
    margin: 0.4rem 0 0;
    color: rgba(215,222,255,0.82);
    line-height: 1.6;
  }

  .status {
    display: inline-flex;
    font-size: 0.65rem;
    letter-spacing: 0.16em;
    margin-top: 0.6rem;
    padding: 0.2rem 0.5rem;
    border-radius: 999px;
    text-transform: uppercase;
  }

  .status-active {
    background: rgba(29,185,84,0.16);
    color: rgba(140,255,195,0.9);
  }

  .status-planned {
    background: rgba(255,193,70,0.16);
    color: rgba(255,213,130,0.9);
  }

  .status-legacy {
    background: rgba(120,130,255,0.16);
    color: rgba(176,190,255,0.85);
  }
</style>
