{
  "name": "workflow-automation",
  "version": "1.0.0",
  "description": "Automated workflow system with triggers, conditions, and actions",
  "type": "automation",
  "author": "Arcanea System",
  
  "capabilities": {
    "primary": [
      "Create and manage automated workflows",
      "File system monitoring and triggers",
      "Scheduled task execution",
      "Multi-step workflow orchestration",
      "Conditional branching"
    ],
    "secondary": [
      "Workflow templates",
      "Execution history tracking",
      "Error handling and retry",
      "Parallel execution",
      "Webhook integration"
    ]
  },

  "configuration": {
    "maxWorkflows": 100,
    "maxStepsPerWorkflow": 20,
    "executionTimeout": 300000,
    "retryAttempts": 3,
    "retryDelay": 5000,
    "parallelExecution": true,
    "maxConcurrentWorkflows": 5
  },

  "triggers": {
    "types": {
      "file": {
        "events": ["created", "modified", "deleted", "moved"],
        "patterns": ["*"],
        "recursive": true
      },
      "scheduled": {
        "cron": true,
        "interval": true,
        "oneTime": true
      },
      "manual": {
        "enabled": true,
        "confirmation": false
      },
      "webhook": {
        "enabled": true,
        "authentication": "token"
      },
      "guardian": {
        "events": ["detected", "affinity-changed"],
        "threshold": 0.7
      }
    }
  },

  "actions": {
    "scan": {
      "description": "Scan files or directories",
      "parameters": {
        "path": { "type": "string", "required": true },
        "recursive": { "type": "boolean", "default": true },
        "fileTypes": { "type": "array", "default": [] }
      }
    },
    "analyze": {
      "description": "Analyze content with multi-dimensional analysis",
      "parameters": {
        "target": { "type": "string", "required": true },
        "dimensions": { "type": "array", "default": ["all"] },
        "output": { "type": "string", "default": "json" }
      }
    },
    "organize": {
      "description": "Organize files based on analysis",
      "parameters": {
        "source": { "type": "string", "required": true },
        "destination": { "type": "string", "required": true },
        "strategy": { "type": "string", "default": "by-guardian" }
      }
    },
    "notify": {
      "description": "Send notification",
      "parameters": {
        "message": { "type": "string", "required": true },
        "channels": { "type": "array", "default": ["console"] },
        "priority": { "type": "string", "default": "normal" }
      }
    },
    "export": {
      "description": "Export data or reports",
      "parameters": {
        "format": { "type": "string", "default": "json" },
        "destination": { "type": "string", "required": true },
        "data": { "type": "object", "required": true }
      }
    },
    "transform": {
      "description": "Transform content format",
      "parameters": {
        "input": { "type": "string", "required": true },
        "outputFormat": { "type": "string", "required": true },
        "options": { "type": "object", "default": {} }
      }
    },
    "index": {
      "description": "Index content for search",
      "parameters": {
        "content": { "type": "string", "required": true },
        "metadata": { "type": "object", "default": {} }
      }
    },
    "recommend": {
      "description": "Generate recommendations",
      "parameters": {
        "userId": { "type": "string", "required": true },
        "context": { "type": "object", "default": {} }
      }
    }
  },

  "conditions": {
    "types": {
      "fileExists": { "operator": "exists" },
      "fileSize": { "operators": [">", "<", "=", ">=", "<="] },
      "fileAge": { "operators": [">", "<"], "units": ["minutes", "hours", "days"] },
      "contentMatch": { "operator": "contains" },
      "guardianAffinity": { "operators": [">", ">="], "threshold": 0.6 },
      "timeRange": { "format": "cron" },
      "custom": { "supports": "javascript" }
    }
  },

  "defaultWorkflows": {
    "auto-scan": {
      "trigger": { "type": "file", "events": ["created", "modified"] },
      "steps": [
        { "action": "scan", "params": { "path": ".", "recursive": true } },
        { "action": "analyze", "params": { "dimensions": ["guardian", "content"] } },
        { "action": "index", "params": {} },
        { "action": "notify", "params": { "message": "New files scanned and analyzed" } }
      ]
    },
    "smart-organize": {
      "trigger": { "type": "manual" },
      "steps": [
        { "action": "analyze", "params": { "target": "./library", "dimensions": ["all"] } },
        { "action": "organize", "params": { "strategy": "by-guardian" } },
        { "action": "notify", "params": { "message": "Library organized by Guardian affinity" } }
      ]
    },
    "daily-report": {
      "trigger": { "type": "scheduled", "cron": "0 9 * * *" },
      "steps": [
        { "action": "scan", "params": { "path": "." } },
        { "action": "export", "params": { "format": "html", "destination": "./reports/daily.html" } },
        { "action": "notify", "params": { "message": "Daily report generated" } }
      ]
    }
  },

  "execution": {
    "mode": "async",
    "queue": "persistent",
    "logging": true,
    "errorHandling": {
      "strategy": "continue",
      "notification": true,
      "retry": true
    }
  },

  "output": {
    "format": "json",
    "includeExecutionTime": true,
    "includeStepResults": true,
    "includeErrors": true
  }
}
