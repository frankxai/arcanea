{
  "name": "visual-analysis",
  "version": "1.0.0",
  "description": "Advanced visual content analysis for images, diagrams, and visual assets",
  "type": "analysis",
  "author": "Arcanea System",
  
  "capabilities": {
    "primary": [
      "Extract color palettes from images",
      "Analyze visual composition and layout",
      "Detect visual patterns and structures",
      "Identify image type and format",
      "Calculate visual complexity scores"
    ],
    "secondary": [
      "Generate thumbnails and previews",
      "Detect text within images (OCR)",
      "Analyze visual sentiment",
      "Extract dominant visual themes"
    ]
  },

  "configuration": {
    "supportedFormats": ["png", "jpg", "jpeg", "gif", "svg", "webp", "bmp"],
    "maxFileSize": 20971520,
    "maxDimensions": { "width": 4096, "height": 4096 },
    "thumbnailSize": { "width": 300, "height": 300 },
    "enableOCR": true,
    "enableColorExtraction": true,
    "enableCompositionAnalysis": true
  },

  "analysisDimensions": {
    "color": {
      "enabled": true,
      "extractDominantColors": true,
      "colorCount": 5,
      "colorSpace": "rgb",
      "includeHex": true,
      "includeRgb": true,
      "includeHsl": true
    },
    "composition": {
      "enabled": true,
      "detectFocalPoints": true,
      "analyzeSymmetry": true,
      "detectPatterns": true,
      "calculateRuleOfThirds": true
    },
    "metadata": {
      "enabled": true,
      "extractEXIF": true,
      "extractDimensions": true,
      "extractFormat": true,
      "extractFileSize": true
    },
    "structure": {
      "enabled": true,
      "detectEdges": true,
      "detectShapes": true,
      "detectTextures": true,
      "calculateSharpness": true
    }
  },

  "visualTags": {
    "categories": [
      {
        "name": "abstract",
        "indicators": ["geometric", "pattern", "texture", "gradient"],
        "confidenceThreshold": 0.7
      },
      {
        "name": "nature",
        "indicators": ["organic", "flowing", "natural", "landscape"],
        "confidenceThreshold": 0.7
      },
      {
        "name": "technical",
        "indicators": ["diagram", "chart", "interface", "code"],
        "confidenceThreshold": 0.7
      },
      {
        "name": "artistic",
        "indicators": ["creative", "expressive", "colorful", "dynamic"],
        "confidenceThreshold": 0.7
      }
    ]
  },

  "guardianMapping": {
    "abstract": { "primary": "void", "secondary": "wind" },
    "nature": { "primary": "earth", "secondary": "water" },
    "technical": { "primary": "earth", "secondary": "fire" },
    "artistic": { "primary": "fire", "secondary": "water" }
  },

  "output": {
    "format": "json",
    "includeThumbnails": true,
    "includeColorPalette": true,
    "includeCompositionData": true,
    "includeMetadata": true,
    "includeVisualTags": true,
    "includeGuardianAffinity": true
  },

  "performance": {
    "processingTimeout": 10000,
    "maxConcurrent": 5,
    "cacheResults": true,
    "cacheDuration": 7200
  },

  "quality": {
    "minResolution": { "width": 100, "height": 100 },
    "preferredAspectRatios": ["16:9", "4:3", "1:1", "21:9"],
    "compressionQuality": 0.85
  }
}
