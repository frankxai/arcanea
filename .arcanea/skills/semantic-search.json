{
  "name": "semantic-search",
  "version": "1.0.0",
  "description": "Advanced semantic search with TF-IDF, vector similarity, and contextual understanding",
  "type": "search",
  "author": "Arcanea System",
  
  "capabilities": {
    "primary": [
      "Full-text semantic search across library",
      "Vector-based similarity matching",
      "Context-aware query understanding",
      "Multi-language support",
      "Fuzzy matching for typos"
    ],
    "secondary": [
      "Auto-complete suggestions",
      "Related content recommendations",
      "Search result ranking",
      "Query expansion"
    ]
  },

  "configuration": {
    "indexType": "inverted",
    "vectorDimension": 100,
    "similarityMetric": "cosine",
    "defaultThreshold": 0.3,
    "maxResults": 50,
    "enableFuzzyMatching": true,
    "fuzzyThreshold": 0.6,
    "enableQueryExpansion": true
  },

  "indexing": {
    "fields": {
      "content": { "weight": 1.0, "tokenize": true, "stemming": true },
      "title": { "weight": 2.0, "tokenize": true, "stemming": false },
      "tags": { "weight": 1.5, "tokenize": true, "stemming": false },
      "metadata": { "weight": 0.5, "tokenize": false, "stemming": false }
    },
    "tokenization": {
      "minTokenLength": 2,
      "maxTokenLength": 50,
      "removeStopWords": true,
      "customStopWords": ["arcanea", "system", "file", "document"]
    },
    "stemming": {
      "algorithm": "porter",
      "language": "english"
    }
  },

  "scoring": {
    "tfidfWeight": 0.4,
    "vectorWeight": 0.3,
    "recencyWeight": 0.1,
    "popularityWeight": 0.1,
    "guardianWeight": 0.1
  },

  "queryProcessing": {
    "steps": [
      "normalize",
      "tokenize",
      "removeStopWords",
      "stem",
      "expandSynonyms",
      "generateVariations"
    ],
    "synonyms": {
      "create": ["build", "make", "design", "craft"],
      "transform": ["change", "evolve", "metamorphose", "transmute"],
      "analyze": ["examine", "study", "investigate", "explore"],
      "guardian": ["protector", "guide", "mentor", "entity"]
    },
    "variations": {
      "generatePlural": true,
      "generateSingular": true,
      "generateVerbForms": true
    }
  },

  "results": {
    "format": "ranked",
    "includeExcerpts": true,
    "excerptLength": 200,
    "highlightMatches": true,
    "includeConfidence": true,
    "includeRelated": true,
    "maxRelated": 5
  },

  "performance": {
    "maxQueryLength": 500,
    "searchTimeout": 2000,
    "indexUpdateInterval": 300,
    "enableCaching": true,
    "cacheDuration": 600
  },

  "guardianEnhancement": {
    "enabled": true,
    "boostRelevantGuardians": true,
    "guardianBoostFactor": 1.2,
    "elementalContextMatching": true
  }
}
