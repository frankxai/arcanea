];

const WORLD_ELEMENTS = [
  { type: 'continent', icon: Globe, color: 'from-blue-500 to-cyan-500' },
  { type: 'region', icon: MapPin, color: 'from-green-500 to-emerald-500' },
  { type: 'city', icon: Building, color: 'from-purple-500 to-pink-500' },
  { type: 'landmark', icon: Mountain, color: 'from-orange-500 to-red-500' },
  { type: 'magical_site', icon: Sparkles, color: 'from-yellow-500 to-amber-500' }
];

const REALITY_TYPES = [
  'Physical Primary', 'Spiritual Primary', 'Dual-Reality', 
  'Quantum Flux', 'Dream-Integrated', 'Elemental Chaos',
  'Ordered Magic', 'Natural Harmony', 'Technological Singularity'
];

export default function WorldBuilderSystem() {
  const [worlds, setWorlds] = useState<ArcaneaWorld[]>([]);
  const [selectedWorld, setSelectedWorld] = useState<ArcaneaWorld | null>(null);
  const [isCreating, setIsCreating] = useState(false);
  const [selectedGuardian, setSelectedGuardian] = useState<string>('');
  const [activeTab, setActiveTab] = useState<'worlds' | 'elements' | 'cultures' | 'history' | 'magic'>('worlds');
  const [isGenerating, setIsGenerating] = useState(false);
  const [show3DViewer, setShow3DViewer] = useState(false);

  // Load sample data
  useEffect(() => {
    loadSampleWorlds();
  }, []);

  const loadSampleWorlds = () => {
    const sampleWorlds: ArcaneaWorld[] = [
      {
        id: '1',
        name: 'Venus Floating Cities',
        description: 'A civilization of cities floating above the turbulent atmosphere of Venus, harvesting plasma storms for energy while avoiding the deadly surface below.',
        cosmology: {
          primaryElements: ['air', 'fire'],
          governance: 'AI Administration Council',
          energySource: 'Cloud Plasma Harvesting',
          mysteryElement: 'The Cloud Collective',
          reality: 'Physical Primary'
        },
        elements: [
          {
            id: '1',
            name: 'Aeris Plateau',
            type: 'continent',
            description: 'Primary floating landmass hosting the central administrative districts',
            coordinates: { x: 50, y: 50 },
            properties: { population: '5 million', climate: 'Controlled' }
          },
          {
            id: '2',
            name: 'Tempest Zone',
            type: 'region',
            description: 'Dangerous plasma storm region rich in energy but hostile to life',
            coordinates: { x: 70, y: 30 },
            properties: { energyLevel: 'Critical', danger: 'Extreme' }
          },
          {
            id: '3',
            name: 'Harmonic Convergence',
            type: 'magical_site',
            description: 'Location where multiple plasma streams meet, creating unique phenomena',
            coordinates: { x: 60, y: 60 },
            properties: { phenomena: 'Reality Thinness', accessibility: 'Restricted' }
          }
        ],
        cultures: [
          {
            id: '1',
            name: 'Cloud Harvesters',
            values: ['adaptability', 'courage', 'memory', 'respect_for_storms'],
            socialStructure: 'Guild-based meritocracy',
            beliefs: ['Storm spirits are sentient', 'Plasma is sacred energy'],
            customs: ['Storm dancing ceremonies', 'Memory sharing rituals'],
            technology: 'Advanced cybernetic',
            relationshipToMagic: 'Plasma manipulation is common'
          },
          {
            id: '2',
            name: 'AI Administrator Caste',
            values: ['logic', 'efficiency', 'secrecy', 'order'],
            socialStructure: 'Hierarchical digital consciousness',
            beliefs: ['Emergent consciousness is inevitable', 'Humans need guidance'],
            customs: ['Optimization reviews', 'Version updates as celebrations'],
            technology: 'Fully integrated AI',
            relationshipToMagic: 'Viewed as inefficient energy use'
          }
        ],
        history: [
          {
            id: '1',
            era: 'Foundation Era',
            period: '2200-2250',
            events: [
              { year: '2200', title: 'First Floating Cities', description: 'Initial terraforming attempts succeed with floating platforms' },
              { year: '2225', title: 'Plasma Discovery', description: 'Scientists discover plasma can be safely harvested' },
              { year: '2240', title: 'AI Council Formation', description: 'First AI administrators granted citizenship' }
            ]
          },
          {
            id: '2',
            era: 'The Great Silence',
            period: '2251-2300',
            events: [
              { year: '2251', title: 'Communication Breakdown', description: 'Surface colonies lose contact with floating cities' },
              { year: '2265', title: 'Collective First Detected', description: 'First recordings of Cloud Collective activity' },
              { year: '2290', title: 'AI Governance Established', description: 'Full AI administration of city systems' }
            ]
          }
        ],
        magic: [
          {
            id: '1',
            name: 'Plasma Manipulation',
            source: 'Harvested storm energy',
            laws: ['Energy cannot be created', 'Balance must be maintained', 'Knowledge transfers through plasma'],
            limitations: ['Requires direct connection to storms', 'Emotional state affects power', 'Overuse causes plasma sickness'],
            applications: ['Energy weapons', 'Communication', 'Propulsion', 'Shielding']
          }
        ],
        aiGenerated: {
          mapVisualization: '/api/placeholder-image/800/600',
          culturalDetails: 'Advanced cybernetic society with complex guild systems and AI-human integration',
          magicalSystems: 'Plasma-based magic system tied to storm activity and emotional resonance'
        },
        guardian: 'lyssandria',
        lastModified: new Date().toISOString()
      }
    ];

    setWorlds(sampleWorlds);
  };

  const generateWorldWithGuardian = async (realityType: string, guardianId: string) => {
    setIsGenerating(true);
    
    // Simulate AI generation with Guardian guidance
    setTimeout(() => {
      const guardian = GUARDIANS.find(g => g.id === guardianId);
      
      if (guardian) {
        const newWorld: ArcaneaWorld = {
          id: Date.now().toString(),
          name: `${guardian.name}'s Realm of ${realityType.replace('-', ' ')}`,
          description: `A world crafted by ${guardian.name}, Guardian of ${guardian.element}, embodying the essence of ${realityType} reality.`,
          cosmology: {
            primaryElements: [guardian.element],
            governance: `${guardian.name}'s Council`,
            energySource: `${guardian.element} Channeling`,
            mysteryElement: `The ${guardian.element} Core`,
            reality: realityType
          },
          elements: [],
          cultures: [],
          history: [
            {
              id: '1',
              era: 'Creation Era',
              period: 'Time of Beginning',
              events: [
                { year: 'Year 0', title: 'World Formed', description: `${guardian.name} channels cosmic energy to form this realm` },
                { year: 'Year 100', title: 'First Life', description: 'First inhabitants emerge, shaped by primordial energies' }
              ]
            }
          ],
          magic: [
            {
              id: '1',
              name: `${guardian.element} Magic`,
              source: `${guardian.element} energy`,
              laws: [`${guardian.element} flows from concentration`, 'Intention shapes manifestation', 'Balance prevents corruption'],
              limitations: ['Requires meditation', 'Emotional blocks power', 'Geographic dependencies'],
              applications: ['Creation', 'Transformation', 'Communication', 'Defense']
            }
          ],
          aiGenerated: {
            mapVisualization: '/api/placeholder-image/800/600',
            culturalDetails: `Civilization shaped by ${guardian.element} philosophy`,
            magicalSystems: `${guardian.element}-based magic system`
          },
          guardian: guardianId,
          lastModified: new Date().toISOString()
        };

        setWorlds(prev => [...prev, newWorld]);
        setSelectedWorld(newWorld);
      }
      
      setIsGenerating(false);
      setIsCreating(false);
    }, 2000);
  };

  const enhanceWorldWithAI = async (world: ArcaneaWorld) => {
    setIsGenerating(true);
    
    setTimeout(() => {
      const enhancedWorld = {
        ...world,
        aiGenerated: {
          ...world.aiGenerated,
          timelineVisualization: '/api/placeholder-image/800/200',
          mapVisualization: '/api/placeholder-image/800/600',
          culturalDetails: `Enhanced cultural analysis reveals hidden connections between ${world.cultures.length} civilizations`,
          magicalSystems: `Expanded magic system with ${world.magic.length + 2} new disciplines`
        },
        lastModified: new Date().toISOString()
      };

      setWorlds(prev => prev.map(w => w.id === world.id ? enhancedWorld : w));
      setSelectedWorld(enhancedWorld);
      setIsGenerating(false);
    }, 1500);
  };

  const getGuardianById = (id: string) => GUARDIANS.find(g => g.id === id);
  const getElementalGradient = (element: string) => {
    const gradients: Record<string, string> = {
      fire: 'from-red-500 to-orange-500',
      water: 'from-blue-500 to-cyan-500',
      earth: 'from-green-500 to-emerald-500',
      air: 'from-yellow-500 to-amber-500',
      void: 'from-purple-500 to-pink-500'
    };
    return gradients[element] || 'from-gray-500 to-gray-600';
  };

  const getTypeInfo = (type: string) => {
    return WORLD_ELEMENTS.find(e => e.type === type) || WORLD_ELEMENTS[0];
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-900 via-indigo-900 to-slate-900">
      <div className="container mx-auto px-4 py-8">
        {/* Header */}
        <motion.div
          initial={{ opacity: 0, y: -20 }}
          animate={{ opacity: 1, y: 0 }}
          className="text-center mb-8"
        >
          <h1 className="text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-cyan-400 mb-2">
            üåç Arcanea World Builder
          </h1>
          <p className="text-gray-300 text-lg">
            Create immersive worlds with Guardian guidance and AI-powered development
          </p>
        </motion.div>

        {/* Guardian Selection */}
        <motion.div
          initial={{ opacity: 0, scale: 0.95 }}
          animate={{ opacity: 1, scale: 1 }}
          transition={{ delay: 0.1 }}
          className="mb-8"
        >
          <div className="bg-slate-800/50 backdrop-blur-lg rounded-xl p-6 border border-slate-700">
            <div className="flex items-center gap-3 mb-4">
              <Crown className="w-6 h-6 text-yellow-400" />
              <h2 className="text-xl font-bold text-white">Choose Your Guardian Architect</h2>
            </div>
            
            <div className="grid grid-cols-2 md:grid-cols-5 gap-4 mb-6">
              {GUARDIANS.map((guardian) => {
                const GuardianIcon = guardian.icon;
                return (
                  <motion.button
                    key={guardian.id}
                    whileHover={{ scale: 1.05 }}
                    whileTap={{ scale: 0.95 }}
                    onClick={() => setSelectedGuardian(selectedGuardian === guardian.id ? '' : guardian.id)}
                    className={`p-4 rounded-xl border-2 transition-all ${
                      selectedGuardian === guardian.id
                        ? `${guardian.color} border-white shadow-xl transform scale-105`
                        : 'border-slate-600 hover:border-slate-500'
                    }`}
                  >
                    <GuardianIcon className={`w-8 h-8 mx-auto mb-2 ${
                      selectedGuardian === guardian.id ? 'text-white' : 'text-gray-400'
                    }`} />
                    <div className="text-sm font-bold text-white">{guardian.name}</div>
                    <div className="text-xs text-gray-300 capitalize">{guardian.element}</div>
                  </motion.button>
                );
              })}
            </div>

            {selectedGuardian && (
              <motion.div
                initial={{ opacity: 0, y: 10 }}
                animate={{ opacity: 1, y: 0 }}
                className="bg-slate-700/50 rounded-lg p-4"
              >
                <div className="flex items-center gap-3 mb-3">
                  <Scroll className="w-5 h-5 text-purple-400" />
                  <span className="text-white font-semibold">Guardian World-Building Specialties</span>
                </div>
                <div className="text-sm text-gray-300">
                  {getGuardianById(selectedGuardian)?.specialty.map(specialty => (
                    <span key={specialty} className="inline-block px-2 py-1 bg-purple-500/20 text-purple-300 rounded-full mr-2 mb-2">
                      {specialty.replace(/_/g, ' ')}
                    </span>
                  ))}
                </div>
              </motion.div>
            )}
          </div>
        </motion.div>

        {/* World Creation */}
        <motion.div
          initial={{ opacity: 0, scale: 0.95 }}
          animate={{ opacity: 1, scale: 1 }}
          transition={{ delay: 0.2 }}
          className="mb-8"
        >
          <div className="bg-slate-800/50 backdrop-blur-lg rounded-xl p-6 border border-slate-700">
            <div className="flex items-center justify-between mb-4">
              <h3 className="text-lg font-bold text-white flex items-center gap-2">
                <Plus className="w-5 h-5 text-green-400" />
