/**
 * Arcanea World Builder System
 * 
 * Advanced world creation with spatial integration, culture generation,
 * and Guardian-guided development
 */

'use client';

import React, { useState, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { 
  Globe, Plus, Edit, Trash2, Eye, Download, Upload,
  Sparkles, Building, History, Users, Mountain, Waves,
  Crown, Flame, Droplet, Wind, Circle,
  Save, X, ChevronRight, BookOpen, Settings, MapPin,
  Sun, Moon, Stars, Zap, Shield, Scroll
} from 'lucide-react';

// Types
interface WorldElement {
  id: string;
  name: string;
  type: 'continent' | 'region' | 'city' | 'landmark' | 'magical_site';
  description: string;
  coordinates?: { x: number; y: number };
  properties: Record<string, any>;
}

interface WorldCulture {
  id: string;
  name: string;
  values: string[];
  socialStructure: string;
  beliefs: string[];
  customs: string[];
  technology: string;
  relationshipToMagic: string;
}

interface WorldHistory {
  id: string;
  era: string;
  period: string;
  events: {
    year: string;
    title: string;
    description: string;
  }[];
}

interface WorldMagic {
  id: string;
  name: string;
  source: string;
  laws: string[];
  limitations: string[];
  applications: string[];
}

interface ArcaneaWorld {
  id: string;
  name: string;
  description: string;
  cosmology: {
    primaryElements: string[];
    governance: string;
    energySource: string;
    mysteryElement: string;
    reality: string;
  };
  elements: WorldElement[];
  cultures: WorldCulture[];
  history: WorldHistory[];
  magic: WorldMagic[];
  aiGenerated?: {
    mapVisualization?: string;
    culturalDetails?: string;
    magicalSystems?: string;
    timelineVisualization?: string;
  };
  guardian?: string;
  lastModified: string;
}

interface Guardian {
  id: string;
  name: string;
  element: string;
  specialty: string[];
  color: string;
  icon: React.ElementType;
}

const GUARDIANS: Guardian[] = [
  {
    id: 'draconia',
    name: 'Draconia',
    element: 'fire',
    specialty: ['transformation', 'cataclysmic_events', 'passion_driven_cultures'],
    color: 'from-red-500 to-orange-500',
    icon: Flame
  },
  {
    id: 'lyssandria',
    name: 'Lyssandria',
    element: 'earth',
    specialty: ['geological_stability', 'logical_world_consistency', 'ancient_civilizations'],
    color: 'from-green-500 to-emerald-500',
    icon: Mountain
  },
  {
    id: 'leylya',
    name: 'Leylya',
    element: 'water',
    specialty: ['societal_evolution', 'emotional_landscapes', 'fluid_beliefs'],
    color: 'from-blue-500 to-cyan-500',
    icon: Waves
  },
  {
    id: 'aiyami',
    name: 'Aiyami',
    element: 'void',
    specialty: ['magic_systems', 'unique_phenomena', 'reality_manipulation'],
    color: 'from-purple-500 to-pink-500',
    icon: Circle
  },
  {
    id: 'alera',
    name: 'Alera',
    element: 'air',
    specialty: ['languages', 'trade_networks', 'information_flow'],
    color: 'from-yellow-500 to-amber-500',
    icon: Wind
