# ============================================
# ARCANEA MVP - CORE CONFIGURATION
# ============================================

# --------------------------------------------
# Application Settings
# --------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001

# --------------------------------------------
# Google Gemini AI (Primary AI Provider)
# --------------------------------------------
# Get API key from: https://ai.google.dev/
GOOGLE_GENERATIVE_AI_API_KEY=

# Model Configuration
GEMINI_MODEL=gemini-2.0-flash-001
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7

# --------------------------------------------
# Supabase Database (PostgreSQL)
# --------------------------------------------
# From: Supabase Dashboard > Settings > Database > Connection String

# Connection Pooler (recommended for serverless)
POSTGRES_URL=postgresql://postgres.[PROJECT]:[PASSWORD]@[REGION].pooler.supabase.com:5432/postgres

# Direct Connection (for migrations)
POSTGRES_URL_NON_POOLING=postgresql://postgres.[PROJECT]:[PASSWORD]@[REGION].pooler.supabase.com:6543/postgres

# Prisma format (if using Prisma)
POSTGRES_PRISMA_URL=postgresql://postgres.[PROJECT]:[PASSWORD]@[REGION].pooler.supabase.com:5432/postgres?pgbouncer=true&connection_limit=1

# --------------------------------------------
# NextAuth.js v5 Authentication
# --------------------------------------------
# Generate with: openssl rand -base64 32
AUTH_SECRET=

# For production, set to your domain
NEXTAUTH_URL=http://localhost:3001

# --------------------------------------------
# OAuth Providers (Optional for MVP)
# --------------------------------------------
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# --------------------------------------------
# Feature Flags (MVP Phase 1)
# --------------------------------------------
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_WORLD_BUILDING=false
NEXT_PUBLIC_ENABLE_MUSIC_LAB=false
NEXT_PUBLIC_ENABLE_ART_STUDIO=false
NEXT_PUBLIC_ENABLE_CODE_ACADEMY=false

# --------------------------------------------
# Optional: Rate Limiting & Caching
# --------------------------------------------
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# --------------------------------------------
# Optional: File Storage (Vercel Blob)
# --------------------------------------------
BLOB_READ_WRITE_TOKEN=

# --------------------------------------------
# Optional: Analytics & Monitoring
# --------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

