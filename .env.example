# Arcanea Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================
# SUPABASE CONFIGURATION (Required)
# ============================================
# Get these from your Supabase project dashboard:
# https://app.supabase.com/project/_/settings/api

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ8...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# AI API KEYS (Required for AI Agents)
# ============================================

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# OR Anthropic Claude API Key - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# ============================================
# MCP SERVER CONFIGURATION (Optional)
# ============================================

# Your MCP Server URL (Nano Banana or custom)
MCP_SERVER_URL=http://localhost:3000
MCP_API_KEY=your-mcp-api-key

# ============================================
# OPTIONAL FEATURES
# ============================================

# Enable debug logging (true/false)
DEBUG_MODE=false

# Sync interval in milliseconds (default: 5000)
SYNC_INTERVAL=5000

# Enable offline mode persistence (true/false)
OFFLINE_MODE_ENABLED=true

# Maximum offline queue size (default: 100)
MAX_OFFLINE_QUEUE=100

# ============================================
# GOOGLE OAUTH (Optional)
# ============================================

# For Google Sign-In - Get from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# ============================================
# GITHUB OAUTH (Optional)
# ============================================

# For GitHub Sign-In - Get from https://github.com/settings/applications
GITHUB_CLIENT_ID=Iv1.your-github-client-id

# ============================================
# APPLICATION SETTINGS
# ============================================

# App name displayed in auth screens
APP_NAME=Arcanea

# App URL (for redirects)
APP_URL=http://localhost:3000

# Default theme (dark/light)
DEFAULT_THEME=dark
