{
  "name": "arcanea",
  "version": "1.0.0",
  "description": "AI-powered creative ecosystem empowering the next generation of creators",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:mobile": "turbo run dev --filter=mobile",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!@arcanea/mobile && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@turbo/gen": "^1.11.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "ai",
    "creativity",
    "education",
    "community",
    "creators",
    "artificial-intelligence",
    "creative-tools",
    "learning-platform",
    "next-js",
    "react-native",
    "typescript"
  ],
  "author": {
    "name": "Frank Riemer",
    "email": "frank@arcanea.ai",
    "url": "https://github.com/frankxai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frankxai/arcanea.git"
  },
  "bugs": {
    "url": "https://github.com/frankxai/arcanea/issues"
  },
  "homepage": "https://arcanea.ai"
}