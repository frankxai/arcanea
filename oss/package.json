{
  "name": "arcanea",
  "version": "3.0.0",
  "description": "Arcanea - The Creative Intelligence Platform. Skills, agents, and tools for AI-human co-creation.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "arcanea": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "agents",
    "skills", 
    "commands",
    "CLAUDE.md",
    "README.md"
