    "ai",
    "agents",
    "skills",
    "creative",
    "writing",
    "world-building",
    "luminors"
  ],
  "author": "FrankX",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frankxai/arcanea.git"
  },
  "homepage": "https://arcanea.ai",
  "dependencies": {
    "commander": "^14.0.0",
    "picocolors": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "bun-types": "^1.0.0",
    "typescript": "^5.0.0"
  }
